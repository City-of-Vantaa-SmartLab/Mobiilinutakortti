services:
  backend:
    # Use canonical Dockerfile for Docker Compose V2 to run container.
    # NB: the mount point of the volume /backend (that is mounted further down this file)
    # is created in the dockerfile, but the volume is not mounted yet at build time,
    # so dockerfile needs to copy the files initially anyway.
    build: ./backend
    depends_on:
      - db
    ports:
      - 3000:3000
    environment:
      AWS_SES_KEY_ID:
      AWS_SES_KEY_VALUE:
      AWS_SES_REGION:
      CERT_SELECTION:
      EMAIL_SOURCE:
      EMAIL_RETURN_PATH:
      ENABLE_SETUP_ENDPOINTS: yes
      ENTRA_ADMIN_ROLE:
      ENTRA_APP_KEY_DISCOVERY_URL:
      FRONTEND_URL:
      HTTP_LOG_LEVEL: debug
      IDP_ENTITY_ID:
      JWT_SECRET:
      KOMPASSI_API_KEY:
      KOMPASSI_API_URL:
      NODE_ENV:
      RDS_DB_NAME:
      RDS_HOSTNAME: db # In case a local postgres exists and env variable is already set.
      RDS_PASSWORD: password # In case a local postgres exists and env variable is already set.
      RDS_PORT:
      RDS_USERNAME: postgres # In case a local postgres exists and env variable is already set.
      SC_SECRET:
      SP_ASSERT_ENDPOINT:
      SP_ENTITY_ID:
      SP_PKEY:
      SSO_LOGIN_URL:
      SSO_LOGOUT_URL:
      TELIA_BATCH_ENDPOINT:
      TELIA_ENDPOINT:
      TELIA_PASSWORD:
      TELIA_USER:
      TELIA_USERNAME:
      USE_DETAILED_LOGS: true
      USE_JSON_LOGS:
    volumes:
      - ./backend/src:/backend/src

  frontend:
    # Use canonical Dockerfile for Docker Compose V2 to run container.
    build: ./frontend
    links:
      - backend
    ports:
      - 3001:3000
    environment:
      VITE_API_URL: http://localhost:3000/api
      VITE_DEV_SERVER_PORT: 3001
      VITE_USE_ALT_ERR_MSG:
    volumes:
      - ./frontend/src:/frontend/src

  admin-frontend:
    # Use canonical Dockerfile for Docker Compose V2 to run container.
    build: ./admin-frontend
    ports:
      - 3002:3000
    depends_on:
      - backend
    environment:
      VITE_API_URL: http://localhost:3000/api
      VITE_DEV_SERVER_PORT: 3002
      VITE_ENABLE_EXTRA_ENTRIES: true
      VITE_ENABLE_KOMPASSI_INTEGRATION: true
      VITE_ENTRA_CLIENT_ID:
      VITE_ENTRA_REDIRECT_URI: http://localhost:3002/loginEntraID
      VITE_ENTRA_TENANT_ID:
    volumes:
      - ./admin-frontend/src:/admin-frontend/src

  db:
    image: postgres:16
    ports:
      - 5432:5432
    volumes:
      - db-data:/var/lib/postgresql/data
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
      POSTGRES_DB: nuta
volumes:
  db-data:
